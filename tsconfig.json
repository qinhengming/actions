{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["jest", "node"],
    "removeComments": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    // 跳过类型声明文件检查
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@onein/actions": ["packages/actions/index.ts"],
      "@onein/actions/*": ["packages/actions/*"],
      "@common": ["packages/actions-shared/lib/common/index.ts"],
      "@common/*": ["packages/actions-shared/lib/common/*"]
    }
  },
  "include": ["packages/global.d.ts", "packages/"],
  "exclude": ["__tests__", "node_modules", "dist", "tests", "jest", "**/*.test.ts", "**/*.spec.ts"],
  "compileOnSave": false
}
